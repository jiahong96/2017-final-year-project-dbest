<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/receipt_layout"
    android:padding="5dp"
    >


    <TextView
        android:id="@+id/receipt_pay_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="27dp"
        android:text="TextView"
        android:textSize="17sp"
        android:paddingTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/receipt_pay_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textSize="17sp"
        android:layout_below="@+id/receipt_pay_id"
        android:layout_alignLeft="@+id/receipt_pay_id"
        android:layout_alignStart="@+id/receipt_pay_id" />



    <TextView
        android:id="@+id/receipt_pay_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textSize="17sp"
        android:layout_below="@+id/receipt_pay_amount"
        android:layout_alignLeft="@+id/receipt_pay_amount"
        android:layout_alignStart="@+id/receipt_pay_amount" />



    <TextView
        android:id="@+id/receipt_pay_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textSize="17sp"
        android:layout_below="@+id/receipt_pay_state"
        android:layout_alignLeft="@+id/receipt_pay_state"
        android:layout_alignStart="@+id/receipt_pay_state" />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/receipt_pay_id"
        android:layout_alignStart="@+id/receipt_pay_id"
        android:layout_marginTop="11dp"
        android:text="Payment ID:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount Paid: "
        android:textSize="18sp"
        android:layout_below="@+id/receipt_pay_id"
        android:layout_alignLeft="@+id/receipt_pay_amount"
        android:layout_alignStart="@+id/receipt_pay_amount"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/receipt_pay_state"
        android:layout_alignLeft="@+id/receipt_pay_state"
        android:layout_alignStart="@+id/receipt_pay_state"
        android:layout_marginBottom="20dp"
        android:text="Payment Status: "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/receipt_pay_date"
        android:layout_alignLeft="@+id/receipt_pay_date"
        android:layout_alignStart="@+id/receipt_pay_date"
        android:layout_marginBottom="20dp"
        android:text="Payment Date: "
        android:textSize="18sp" />

</RelativeLayout>