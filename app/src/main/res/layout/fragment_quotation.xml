<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cheahhong.dbest.InquiryActivity">

    <android.support.v7.widget.RecyclerView
        android:clipToPadding="false"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/recyclerView"
        />

    <ImageView
        android:id="@+id/defaultPic"
        android:src="@drawable/ic_quotation"
        android:layout_centerInParent="true"
        android:alpha="0.2"
        android:layout_width="120dp"
        android:layout_height="120dp"/>
    <TextView
        android:id="@+id/quotationDefault"
        android:text="Quotations"
        android:textColor="@color/subTextColor"
        style="@android:style/TextAppearance.Large"
        android:layout_centerInParent="true"
        android:layout_below="@id/defaultPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>