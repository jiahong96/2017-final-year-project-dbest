<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/bearingQuoteLayout"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/layout_bg2"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <TextView
        android:id="@+id/serialNo"
        android:text="Abc12dde"
        android:textColor="@color/black"
        android:layout_marginTop="3dp"
        android:textSize="@dimen/text_medium"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/price"
        android:text="PricePerUnit: 2.0"
        android:layout_marginTop="3dp"
        android:textColor="@color/subTextColor"
        android:textSize="@dimen/text_medium"
        android:layout_below="@+id/serialNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/quantity"
        android:text="Quantity: 20"
        android:layout_marginTop="3dp"
        android:textColor="@color/subTextColor"
        android:textSize="@dimen/text_medium"
        android:layout_below="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/totalprice"
        android:text="Total: 200.10"
        android:layout_marginTop="3dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_medium"
        android:layout_below="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>