<selector xmlns:android="http://schemas.android.com/apk/res/android"
          android:enterFadeDuration="@android:integer/config_longAnimTime"
          android:exitFadeDuration="@android:integer/config_longAnimTime">
    <item android:state_pressed="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorMainElement"/>
                    <corners android:radius="2dp" />
                </shape>
            </item>

            <item
                android:left="0dp"
                android:right="1dp"
                android:top="0dp"
                android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white"/>
                    <corners android:radius="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorMainElement"/>
                    <corners android:radius="2dp" />
                </shape>
            </item>

            <item
                android:left="0dp"
                android:right="1dp"
                android:top="0dp"
                android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorSelector"/>
                    <corners android:radius="2dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
